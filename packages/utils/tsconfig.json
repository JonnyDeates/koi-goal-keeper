{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["esnext"],
    "target": "esnext",
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["."],
  "exclude": ["dist", "node_modules"]
}