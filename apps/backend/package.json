{
  "name": "koi-goal-keeper-backend",
  "version": "6.0.3",
  "description": "",
  "scripts": {
    "clean": "rmdir /s /q ./build && mkdir build",
    "copy-sitemap": "cp ./sitemap/* ./build/",
    "copy-public-frontend": "cp -r ../public/dist/static ./build/public && cp ../public/dist/index.html ./build/public/index-public.html",
    "copy-private-frontend": "cp -r ../private/dist/static ./build/private && cp ../private/dist/index.html ./build/private/index-private.html",
    "copy-frontend": "pnpm run copy-sitemap && pnpm run copy-public-frontend && pnpm run copy-private-frontend",
    "dev": "pnpm migrate && tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --minify --platform=node --outfile=build/index.js --external:express --external:cors --external:knex",
    "build-frontend": "cd ../../ && pnpm build && cd - && pnpm copy-frontend",
    "lint": "eslint . --fix",
    "monorepo": "pnpm run build-frontend && tsx watch src/index.ts",
    "start": "node build/index.js",
    "type-check": "tsc",
    "migrate": "knex migrate:latest",
    "migrate:down": "knex migrate:down"
  },
  "dependencies": {
    "bcryptjs": "latest",
    "connect-pg-simple": "latest",
    "cors": "latest",
    "cross-env": "latest",
    "@paralleldrive/cuid2": "latest",
    "express": "latest",
    "express-session": "latest",
    "express-cache-controller": "latest",
    "helmet": "latest",
    "knex": "latest",
    "http-status-codes": "latest",
    "morgan": "latest",
    "nodemailer": "latest",
    "pg": "latest",
    "stripe": "latest"
  },
  "devDependencies": {
    "@types/bcryptjs": "latest",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/express-session": "latest",
    "@types/morgan": "latest",
    "@types/nodemailer": "latest",
    "@types/pg": "latest",
    "@types/connect-pg-simple": "latest",
    "dotenv": "latest",
    "esbuild": "latest",
    "typescript": "latest",
    "tsx": "latest",
    "@repo/tsconfig": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/utils": "workspace:*"
  }
}
